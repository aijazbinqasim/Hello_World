@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add New";
}

<div class=" col-md-3 ">
    <h4>Add New Product</h4>
    <hr />

    <form asp-controller="Products" asp-action="Save" method="post">
    
        <div id="error-summary" asp-validation-summary="All"></div>

        <label asp-for="Id" class="form-label-"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id"></span><br />

        <label asp-for="Title" class="form-label-c"></label>
        <input asp-for="Title" placeholder="Add Title" class="form-control" />
        <span asp-validation-for="Title"></span><br />
        
        <label asp-for="Email" class="form-label-c"></label>
        <input asp-for="Email" placeholder="Add Email" class="form-control" />
        <span asp-validation-for="Email"></span><br />

        <label asp-for="Website" class="form-label-c"></label>
        <input asp-for="Website" placeholder="Add Website" class="form-control" />
        <span asp-validation-for="Website"></span><br />

        <label asp-for="Price" class="form-label-c"></label>
        <input min="0" max="500" asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span><br />

        <label asp-for="Description" ></label>
        <textarea asp-for="Description" rows="4" cols="20" class="form-control"></textarea>
        <span asp-validation-for="Description"></span><br />

        <button class="btn btn-outline-success me-2" type="submit">Save</button>
           
    </form>
</div>

@{
    @section Styles {
        <style>
            span, #error-summary {
                color: red;
            }
        </style>
    }

    @section Scripts {
        <script>
          function submitConfirmation() {
              var msg = confirm('Are you sure to save this product?');

              if(!msg) {
                  return false;
              }

              return true;
          }
        </script>

        <script src="~/js/jquery-3.7.0.min.js"></script>
        <script src="~/js/jquery.validate.min.js"></script>
        <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    }
}