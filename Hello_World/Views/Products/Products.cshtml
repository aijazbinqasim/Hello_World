@model IEnumerable<Hello_World.Models.Product>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <div>
        <h4>Product</h4>
        <hr />

        <table border="1" width="60%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>

                    <th>
                        Title
                    </th>

                   @* <th>
                        Price
                    </th>*@
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>

                        <td>
                            <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a>
                        </td>

                       @* <td>
                            @item.Price
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
